{
  "compilerOptions": {
    "declaration": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "lib": ["es2019", "esnext.asynciterable"],
    "outDir": "dist"
  },
  "include": ["src/**/*.ts"]
}